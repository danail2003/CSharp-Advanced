namespace GenericScale
{
    public class EqualityScale<T>
    {
        private readonly T left;
        private readonly T right;

        public EqualityScale(T left, T right)
        {
            this.left = left;
            this.right = right;
        }

        public bool AreEqual()
        {
            bool result = this.left.Equals(this.right);

            return result;
        }
    }
}
